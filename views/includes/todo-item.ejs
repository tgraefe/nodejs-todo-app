<div class="todos__list-item" title="<%= new Date(todo.dueDate).toLocaleString() %>">
    <div class="todos__list-item-state <%= (todo.dueDate < Date.now()) ? 'green' : 'yellow' %>"></div>
    <div class="todos__list-item-assignedTo">
        <img src="/user/avatar.svg" alt="" />
        <h3><%= username %></h3>
    </div>
    <div class="todos__list-item-details">
        <h3><%= todo.title %></h3>
        <p><%= todo.details %></p>
    </div>
    <div class="todos__list-item-actions">
        <form action="/finished/<%= todo._id %>" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn__done" type="submit" ><img src="/icons/check.svg" alt=""></button>
        </form>
        <form action="/delete/<%= todo._id %>" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn__delete" type="submit" ><img src="/icons/delete.svg" alt=""></button>
        </form>
    </div>
</div>